{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["jest", "node"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
